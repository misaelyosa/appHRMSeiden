<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMapp.Pages.EmployeeForms.GeneratePKWTPage"
             Title="GeneratePKWTPage"
             BackgroundColor="White">
    <ScrollView>
        <Grid RowDefinitions="*, auto" ColumnDefinitions="*,*,*" RowSpacing="16">
            <VerticalStackLayout Grid.Row="0" Grid.ColumnSpan="3">

            </VerticalStackLayout>

            <VerticalStackLayout Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="1">
                    <Button Text="Create PDF"
                        Command="{Binding CreatePdfCommand}"/>
                    <Button Text="Open Generated PDF"
                        Command="{Binding OpenPdfExternalCommand}"
                            BackgroundColor="Orange"/>
                </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>