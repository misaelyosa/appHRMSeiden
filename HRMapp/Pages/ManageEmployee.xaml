<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMapp.Pages.ManageEmployee"
             
             Title="ManageEmployee">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <Button Text="Reload Data"
                    Command="{Binding LoadEmployeeCommand}" />

                <CollectionView ItemsSource="{Binding Employees}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BackgroundColor="DarkSlateGrey">
                                <VerticalStackLayout>
                                    <Label Text="{Binding name}" 
                                            FontAttributes="Bold" 
                                            FontSize="18"
                                            LineBreakMode="WordWrap"
                                            HorizontalOptions="Start" />

                                    <Grid ColumnDefinitions="Auto, *"
                                         RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                                        <Label Text="NIP :" Grid.Row="0" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding nip}" Grid.Row="0" Grid.Column="1" VerticalOptions="Start"/>

                                        <Label Text="NIK :" Grid.Row="1" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding nik}" Grid.Row="1" Grid.Column="1" VerticalOptions="Start"/>

                                        <Label Text="Dept. :" Grid.Row="2" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding Department.name}" Grid.Row="2" Grid.Column="1" VerticalOptions="Start"/>

                                        <Label Text="Jabatan :" Grid.Row="3" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding Job.job_name}" Grid.Row="3" Grid.Column="1" VerticalOptions="Start"/>

                                        <Label Text="Pabrik :" Grid.Row="4" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding Factory.name}" Grid.Row="4" Grid.Column="1" VerticalOptions="Start"/>

                                        <Label Text="Status :" Grid.Row="5" Grid.Column="0" VerticalOptions="Start"/>
                                        <Label Text="{Binding employee_status}" Grid.Row="5" Grid.Column="1" VerticalOptions="Start"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>