<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMapp.Pages.ManageReferenceDataPage"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             BackgroundColor="White"
             Title="ManageReferenceDataPage">
    <ScrollView>
        <Grid ColumnDefinitions="*, *" 
              RowDefinitions="auto, auto, auto, auto, auto"
              Margin="20, 10, 20, 10" ColumnSpacing="8" RowSpacing="8">
            <Label Grid.Row="0" Text="Manage Master dan Referential Data" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
            <VerticalStackLayout Grid.Column="0" Grid.Row="1">
                <Frame CornerRadius="16"
                       x:Name="departmentFrame"
                       BackgroundColor="LightSteelBlue">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDepartmentFrameTapped"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Department" HorizontalOptions="Center" VerticalOptions="Center"
                           FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                </Frame>

                <Button x:Name="hideDeptBtn"
                        IsVisible="False"
                        BackgroundColor="PaleVioletRed"
                        Margin="0,0,0,8"
                        Text="Hide" Clicked="OnHideDepartmentTapped"/>
                <Label IsVisible="False" x:Name="deptListTitle"
                       Text="Department : " FontAttributes="Bold" TextColor="Black" FontSize="16" Margin="0,0,0,6"/>
                <CollectionView x:Name="departmentCollectionView"
                                IsVisible="False"
                                ItemsSource="{Binding Departments}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/> 
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Black" BackgroundColor="WhiteSmoke" Margin="0,0,0,10" Padding="10">
                                <Grid RowDefinitions="Auto"
                                      ColumnSpacing="4"
                                      ColumnDefinitions="*,auto,auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding name}"
                                           FontSize="15"
                                           TextColor="Black"
                                           HorizontalOptions="Start"/>

                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="Edit"
                                            HorizontalOptions="End"
                                            BackgroundColor="LightBlue"
                                            HeightRequest="15"
                                            WidthRequest="70"
                                            Padding="4"
                                            TextColor="Black"/>

                                    <Button Grid.Row="0" Grid.Column="2"
                                            Text="Delete"
                                            HorizontalOptions="End"
                                            HeightRequest="15"
                                            WidthRequest="70"
                                            Padding="4"
                                            BackgroundColor="Tomato"
                                            TextColor="White"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Grid.Row="1">
                <Frame CornerRadius="16"
                       x:Name="jobsFrame"
                       BackgroundColor="LightSteelBlue">            
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnJobsFrameTapped"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Jobs" HorizontalOptions="Center" VerticalOptions="Center"
                           FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                </Frame>

                <Button x:Name="hideJobsBtn"
                        IsVisible="False"   
                        BackgroundColor="PaleVioletRed"
                        Margin="0,0,0,8"
                        Text="Hide" Clicked="OnHideJobsTapped"/>
                <Label IsVisible="False" x:Name="jobsListTitle"
                        Text="Jabatan: " FontAttributes="Bold" TextColor="Black" FontSize="16" Margin="0,0,0,6"/>
                <CollectionView x:Name="jobsCollectionView"
                                IsVisible="False"
                                ItemsSource="{Binding Jobs}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Black" BackgroundColor="WhiteSmoke" Margin="0,0,0,10" Padding="10">
                                <Grid RowDefinitions="Auto"
                                      ColumnSpacing="4"
                                      ColumnDefinitions="*,auto,auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding job_name}"
                                           FontSize="15"
                                           TextColor="Black"
                                           HorizontalOptions="Start"/>

                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="Edit"
                                            FontSize="12"
                                            WidthRequest="70"
                                            HeightRequest="30"
                                            Padding="4"
                                            BackgroundColor="LightBlue"
                                            TextColor="Black"/>

                                    <Button Grid.Row="0" Grid.Column="2"
                                            Text="Delete"
                                            FontSize="12"
                                            WidthRequest="70"
                                            HeightRequest="30"
                                            Padding="4"
                                            BackgroundColor="Tomato"
                                            TextColor="White"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="0" Grid.Row="2">
                <Frame CornerRadius="16"
                       x:Name="religionFrame"
                       BackgroundColor="LightSteelBlue">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReligionFrameTapped"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Agama" HorizontalOptions="Center" VerticalOptions="Center"
                           FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                </Frame>

                <Button x:Name="hideReligionBtn"
                        IsVisible="False"
                        BackgroundColor="PaleVioletRed"
                        Margin="0,0,0,8"
                        Text="Hide" Clicked="OnHideReligionTapped"/>
                <Label IsVisible="False" x:Name="religionListTitle"
                       Text="Religion: " FontAttributes="Bold" TextColor="Black" FontSize="16" Margin="0,0,0,6"/>
                <CollectionView x:Name="religionCollectionView"
                    IsVisible="False"
                    ItemsSource="{Binding Religions}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Black" BackgroundColor="WhiteSmoke" Margin="0,0,0,10" Padding="10">
                                <Grid RowDefinitions="Auto"
                                      ColumnSpacing="4"
                                      ColumnDefinitions="*,auto,auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding religion_name}"
                                           FontSize="15"
                                           TextColor="Black"
                                           HorizontalOptions="Start"/>

                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="Edit"
                                            FontSize="12"
                                            WidthRequest="70"
                                            HeightRequest="30"
                                            Padding="4"
                                            BackgroundColor="LightBlue"
                                            TextColor="Black"/>

                                    <Button Grid.Row="0" Grid.Column="2"
                                            Text="Delete"
                                            FontSize="12"
                                            WidthRequest="70"
                                            HeightRequest="30"
                                            Padding="4"
                                            BackgroundColor="Tomato"
                                            TextColor="White"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>


            <VerticalStackLayout Grid.Column="1" Grid.Row="2">
                <Label Text="Pabrik: " FontAttributes="Bold" TextColor="Black" FontSize="16"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
                <Label Text="Kota dan Provinsi : " FontAttributes="Bold" TextColor="Black" FontSize="16"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
                <Label Text="Pendidikan Terakhir : " FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>