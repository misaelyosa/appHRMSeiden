<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             NavigationPage.HasNavigationBar="False"
             x:Class="HRMapp.Pages.Session.LoginPage"
             BackgroundColor="White">

    <ScrollView VerticalScrollBarVisibility="Never">
        <VerticalStackLayout Padding="15" Spacing="10" VerticalOptions="Center">
            <Label Text="Seidensticker HRM App"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontAttributes="Bold" />

            <Label Text="Log In"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="MediumPurple"/>

            <Label Text="Hello, welcome back"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

            <input:FormView Padding="10" Spacing="20"
                SubmitCommand="{Binding LoginCommand}">

                <!-- Username -->
                <input:AdvancedEntry Title="Username"
                         TitleColor="Black"
                         Placeholder="Enter your username"
                                     PlaceholderColor="Gray"
                         Text="{Binding Username}">
                    <input:AdvancedEntry.Validations>
                        <validation:RequiredValidation />
                    </input:AdvancedEntry.Validations>
                </input:AdvancedEntry>

                <!-- Password -->
                <input:AdvancedEntry Title="Password"
                         TitleColor="Black"
                         Placeholder="Enter your password"
                                     PlaceholderColor="Gray"
                         IsPassword="True"
                         Text="{Binding Password}">
                    <input:AdvancedEntry.Validations>
                        <validation:RequiredValidation />
                    </input:AdvancedEntry.Validations>
                </input:AdvancedEntry>

                <!-- Submit Button (optional, if not using FormView auto-submit) -->
                <Button Text="LOG IN"
                    input:FormView.IsSubmitButton="True"
                    BackgroundColor="#007aff"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="48" />
                </input:FormView>


            <!-- Remember me and forgot password -->
            <Grid ColumnDefinitions="*, Auto">
                <CheckBox IsChecked="True"
                          VerticalOptions="Center" />
                <Label Text="Remember me"
                       VerticalOptions="Center"
                       FontSize="14"
                       TextColor="Gray"
                       Grid.Column="0"
                       Margin="30,0,0,0" />
                <Button Text="FORGOT PASSWORD?"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        TextColor="Blue"
                        Grid.Column="1" />
            </Grid>


            <!-- Sign up -->
            <VerticalStackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                <Label Text="Don't have an account?" TextColor="Gray" />
                <Button Text="Sign Up"
                        BackgroundColor="Transparent"
                        TextColor="Blue"
                        FontAttributes="Bold"
                       />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>